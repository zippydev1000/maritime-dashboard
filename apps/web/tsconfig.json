{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@maritime/common/*": ["../../packages/common/src/*"],
      "@maritime/socket-events": ["../../packages/socket-events/src"]
    },

    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",

    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*.ts", "src/**/*.tsx", "jest.config.ts", "src/jest.setup.ts"],
  "exclude": ["**/*.js", "**/*.jsx"]
}
